.container
  = form_with(model: @language, url: languages_path, method: 'post', local: true) do |f|
    .field
      %div
        = f.label :language, 'language', class: 'label'
      %div
        = f.text_field :language, class: 'form'
    .field
      %div
        = f.label :title, 'title', class: 'label'
      %div
        = f.text_area :title, class: 'form'
    = f.submit 'POST', class: 'btn'