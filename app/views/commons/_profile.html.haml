.container
  .profile
    .profile_name
      - if user.profile&.avatar&.attached?
        = image_tag user.profile.avatar
      = user.account_name
    .profile_top
      - if user === current_user
        %div= link_to 'edit', edit_profile_path
        %div= link_to 'Logout', destroy_user_session_path, data: {method: 'delete', confirm: 'ok?'}
      - else
        %div= link_to 'chat', edit_profile_path
        .follows
          .follow.hidden
            Follow
          .unfollow.hidden
            unFollow
    .follow_nav
      = link_to account_follows_path(user.id) do
        = user.followings.count
        %br Follow
      = link_to account_unfollows_path(user.id) do
        = user.followers.count
        %br Follower
    - if user.profile.present?
      .profile_item
        .job
          %p job
          = user.profile.job
        .introduction
          %p introduction 
        = user.profile.introduction