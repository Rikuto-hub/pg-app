.container
  .profile
    .profile_name
      %div= user.account_name
    .profile_top
      - if user === current_user
        %div= link_to 'edit', edit_profile_path
        %div= link_to 'Logout', destroy_user_session_path, data: {method: 'delete', confirm: 'ok?'}
      - else
        %div= link_to 'chat', edit_profile_path
        .follows
          .follow.hidden
            Follow
          .unfollow.hidden
            unFollow
    - if user.profile.present?
      .profile_item
        .job
          %p job
          = user.profile.job
        .introduction
          %p introduction 
        = user.profile.introduction